{
  "name": "orb-monorepo",
  "version": "1.0.0",
  "description": "ORB - Desktop AI Assistant with C# WPF Frontend and Python/FastAPI Backend",
  "private": true,
  "workspaces": [],
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "start:frontend": "cd frontend && dotnet run",
    "start:backend": "cd backend && python src/main.py",
    "dev:frontend": "cd frontend && dotnet run",
    "dev:backend": "cd backend && python src/main.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && dotnet build",
    "build:backend": "cd backend && python -m pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && dotnet test",
    "test:backend": "cd backend && python -m pytest tests/",
    "install:all": "npm install && cd backend && python -m pip install -r requirements.txt",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && dotnet clean",
    "clean:backend": "cd backend && find . -name '__pycache__' -exec rm -rf {} +",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "service:install": "cd backend && python -m src.services.install_service",
    "service:uninstall": "cd backend && python -m src.services.uninstall_service",
    "service:start": "cd backend && python -m src.services.start_service",
    "service:stop": "cd backend && python -m src.services.stop_service"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "dotnet": ">=9.0.0",
    "python": ">=3.11.0"
  },
  "keywords": [
    "ai",
    "desktop",
    "assistant",
    "wpf",
    "csharp",
    "python",
    "fastapi",
    "llm",
    "openai"
  ],
  "author": "Luiz Rocha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizrocha/orb.git"
  }
}
