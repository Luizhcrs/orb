{
  "name": "orb-monorepo",
  "version": "1.0.0",
  "description": "ORB - Desktop AI Assistant with Node.js/Electron Frontend and Python/FastAPI Backend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && python main.py",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python dev.py",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && python -m pip install -r requirements.txt",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && python test_backend.py",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && python -m pip install -r requirements.txt",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && npm run clean",
    "clean:backend": "cd backend && find . -name '__pycache__' -exec rm -rf {} +",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "service:install": "cd backend && python scripts/install_service.py",
    "service:uninstall": "cd backend && python scripts/uninstall_service.py",
    "service:start": "cd backend && python scripts/start_service.py",
    "service:stop": "cd backend && python scripts/stop_service.py"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "python": ">=3.11.0"
  },
  "keywords": [
    "ai",
    "desktop",
    "assistant",
    "electron",
    "python",
    "fastapi",
    "llm",
    "openai",
    "anthropic"
  ],
  "author": "Luiz Rocha",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/luizrocha/orb.git"
  }
}
