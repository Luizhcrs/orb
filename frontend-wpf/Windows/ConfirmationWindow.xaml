<Window x:Class="OrbAgent.Frontend.Windows.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Confirmação"
        Height="220" Width="450"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Gradient para Background Liquid Glass -->
        <SolidColorBrush x:Key="GlassBackground" Color="#D9141416" Opacity="0.85"/>
        
        <!-- Gradient para Reflexos Internos -->
        <RadialGradientBrush x:Key="TopReflection">
            <GradientStop Color="#08FFFFFF" Offset="0"/>
            <GradientStop Color="Transparent" Offset="0.5"/>
        </RadialGradientBrush>
    </Window.Resources>

    <!-- Container Principal com Liquid Glass -->
    <Border Background="{StaticResource GlassBackground}"
            BorderBrush="#4DFFFFFF"
            BorderThickness="1.5"
            CornerRadius="8"
            ClipToBounds="True">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                            BlurRadius="24" 
                            ShadowDepth="8" 
                            Opacity="0.4"/>
        </Border.Effect>
        
        <!-- Camada de Reflexo Superior com Grid dentro -->
        <Border Background="{StaticResource TopReflection}"
                CornerRadius="8">
            <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Title Bar com Liquid Glass -->
            <Border Grid.Row="0"
                    Background="#0DFFFFFF"
                    CornerRadius="8,8,0,0"
                    BorderBrush="#14FFFFFF"
                    BorderThickness="0,0,0,1">
                <Grid>
                    <TextBlock x:Name="TitleText"
                               Text="Confirmar Saída"
                               Foreground="White"
                               FontSize="18"
                               FontWeight="SemiBold"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,4,0,0"/>
                </Grid>
            </Border>

            <!-- Message Content -->
            <Border Grid.Row="1"
                    Background="Transparent"
                    Padding="32,24">
                <TextBlock x:Name="MessageText"
                           Text="Deseja realmente sair do Orb Agent?"
                           Foreground="#E6FFFFFF"
                           FontSize="15"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           VerticalAlignment="Center"
                           LineHeight="22"/>
            </Border>

            <!-- Buttons -->
            <Border Grid.Row="2"
                    Background="#0DFFFFFF"
                    BorderBrush="#14FFFFFF"
                    BorderThickness="0,1,0,0"
                    CornerRadius="0,0,8,8"
                    Padding="28,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Botão Cancelar com Liquid Glass -->
                    <Border Grid.Column="0"
                            Height="40"
                            Cursor="Hand"
                            MouseLeftButtonDown="Cancel_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#40FFFFFF" Offset="0"/>
                                            <GradientStop Color="#26FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#4DFFFFFF"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#59FFFFFF" Offset="0"/>
                                                    <GradientStop Color="#40FFFFFF" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#66FFFFFF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.2"/>
                        </Border.Effect>
                        <TextBlock Text="Cancelar"
                                   Foreground="White"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Botão Sair com Visual de Alerta -->
                    <Border Grid.Column="2"
                            Height="40"
                            Cursor="Hand"
                            MouseLeftButtonDown="Exit_Click">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#B3FF4444" Offset="0"/>
                                            <GradientStop Color="#99FF3333" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="BorderBrush" Value="#E6FF6666"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="CornerRadius" Value="8"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="#CCFF4444" Offset="0"/>
                                                    <GradientStop Color="#B3FF3333" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter Property="BorderBrush" Value="#FFFF8888"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.Effect>
                            <DropShadowEffect Color="#FF3333" BlurRadius="16" ShadowDepth="4" Opacity="0.3"/>
                        </Border.Effect>
                        <TextBlock Text="Sair"
                                   Foreground="White"
                                   FontSize="15"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
            </Grid>
        </Border>
    </Border>
</Window>

