{
  "name": "orb-agent",
  "version": "1.0.0",
  "description": "Orb flutuante com agente LLM para desktop",
  "main": "dist/frontend/src/main.js",
  "scripts": {
    "dev": "concurrently \"npm run build:watch\" \"npm run copy:watch\" \"npm run electron:dev\"",
    "build": "tsc && npm run copy:assets",
    "build:watch": "tsc --watch",
    "copy:assets": "npm run copy:html && npm run copy:components",
    "copy:html": "copyfiles src\\*.html dist\\frontend\\src\\",
    "copy:components": "copyfiles src\\components\\* dist\\frontend\\src\\",
    "copy:watch": "nodemon --watch src --ext html --exec \"npm run copy:html\"",
    "electron:dev": "wait-on dist/main.js && electron .",
    "electron:pack": "electron-builder",
    "pack:win": "npm run build && electron-builder --win",
    "pack:mac": "npm run build && electron-builder --mac",
    "pack:linux": "npm run build && electron-builder --linux",
    "pack:all": "npm run build && electron-builder --win --mac --linux",
    "start": "npm run build && electron .",
    "clean": "rimraf dist release"
  },
  "keywords": [
    "orb",
    "ai",
    "agent",
    "desktop",
    "floating"
  ],
  "author": "Luiz",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "concurrently": "^8.2.2",
    "copyfiles": "^2.4.1",
    "electron": "28.1.0",
    "electron-builder": "^24.9.1",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.1",
    "axios": "^1.6.2",
    "dotenv": "^16.3.1",
    "openai": "^4.24.1",
    "ws": "^8.14.2"
  },
  "build": {
    "appId": "com.orbagent.app",
    "productName": "Orb Agent",
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "!**/*.ts",
      "!src/**/*",
      "!tsconfig.json"
    ],
    "extraResources": [
      {
        "from": "../backend/dist/orb-backend.exe",
        "to": "backend/orb-backend.exe"
      },
      {
        "from": "../backend/install_service_native.bat",
        "to": "backend/install_service_native.bat"
      },
      {
        "from": "../backend/uninstall_service_native.bat",
        "to": "backend/uninstall_service_native.bat"
      },
      {
        "from": "../backend/update_service.bat",
        "to": "backend/update_service.bat"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "sign": null,
      "certificateFile": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Orb Agent",
      "runAfterFinish": true,
      "include": "installer.nsh",
      "perMachine": true,
      "allowElevation": true
    },
    "portable": {
      "artifactName": "OrbAgent-Portable-${version}.exe"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "public.app-category.productivity"
    },
    "dmg": {
      "title": "Orb Agent ${version}",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Utility"
    }
  }
}
